---
import BaseLayout from "./BaseLayout.astro";
import Title from "../components/Title.astro";
import Tags from "../components/Tags.astro";

const { frontmatter } = Astro.props;
const currYear = new Date().getFullYear()
const postDate = frontmatter.pubDate.toLocaleDateString(undefined, {
    year: (frontmatter.pubDate.getFullYear() == currYear) ? 'numeric' : undefined,
    month: 'short',
    day: 'numeric',
  });
---
<BaseLayout pageTitle={frontmatter.title}>
  <article class="prose transition">
    <Title>{frontmatter.title}</Title>
    <p class="text-secondary">{postDate} Â· <em>{frontmatter.description}</em></p>
  <!-- <p>Written by {frontmatter.author}</p> -->
  <!-- <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} /> -->
    <slot />
  
  <Tags tags={frontmatter.tags} includeSpacing={true} />
  <hr>
</BaseLayout>
